{"nbformat":4,"nbformat_minor":0,"metadata":{"colab":{"provenance":[],"authorship_tag":"ABX9TyPvfDk1W1Bq9BBXJzyRnmlx"},"kernelspec":{"name":"python3","display_name":"Python 3"},"language_info":{"name":"python"}},"cells":[{"cell_type":"code","execution_count":null,"metadata":{"id":"565YSqPU7Jjy"},"outputs":[],"source":[]},{"cell_type":"code","source":["#EXPERIMENT 6 : Build a content-based recommender system and evaluate  its architecture.\n","\n","import pandas as pd\n","from sklearn.feature_extraction.text import TfidfVectorizer\n","from sklearn.decomposition import TruncatedSVD\n","from sklearn.neighbors import NearestNeighbors\n","from difflib import get_close_matches\n","from IPython.display import display\n","\n","# ------------------- Load dataset -------------------\n","file_path = \"BigBasket Products.csv\"\n","df = pd.read_csv(file_path)\n","\n","# ------------------- Fill missing values -------------------\n","# Convert numeric columns to strings before filling NaNs\n","for col in df.select_dtypes(include=[\"float64\", \"int64\"]).columns:\n","    df[col] = df[col].astype(str)\n","\n","df.fillna(\"\", inplace=True)\n","\n","# ------------------- Combine relevant text features -------------------\n","df[\"combined_features\"] = (\n","    df[\"product\"].astype(str) + \" \" +\n","    df[\"category\"].astype(str) + \" \" +\n","    df[\"sub_category\"].astype(str) + \" \" +\n","    df[\"brand\"].astype(str) + \" \" +\n","    df[\"description\"].astype(str)\n",")\n","\n","# ------------------- Convert text to TF-IDF vectors -------------------\n","vectorizer = TfidfVectorizer(stop_words=\"english\")\n","tfidf_matrix = vectorizer.fit_transform(df[\"combined_features\"])\n","\n","# ------------------- Reduce dimensionality using SVD -------------------\n","svd = TruncatedSVD(n_components=50)  # Increase for more latent features\n","tfidf_reduced = svd.fit_transform(tfidf_matrix)\n","\n","# ------------------- Fit Nearest Neighbors model -------------------\n","nn_model = NearestNeighbors(n_neighbors=11, metric=\"cosine\")\n","nn_model.fit(tfidf_reduced)\n","\n","# ------------------- Recommendation function -------------------\n","def get_recommendations_ANN(product_name, num_recommendations=10):\n","    product_list = df[\"product\"].str.lower().tolist()\n","    closest_match = get_close_matches(product_name.lower(), product_list, n=1)\n","\n","    if not closest_match:\n","        print(f\"Product '{product_name}' not found. Try a different name.\")\n","        return []\n","\n","    closest_match_name = closest_match[0]\n","    idx = df[df[\"product\"].str.lower() == closest_match_name].index\n","\n","    if idx.empty:\n","        print(f\"Product '{product_name}' not found in dataset.\")\n","        return []\n","\n","    idx = idx[0]\n","    distances, indices = nn_model.kneighbors([tfidf_reduced[idx]], n_neighbors=num_recommendations + 1)\n","    product_indices = indices[0][1:num_recommendations + 1]  # Skip the input product itself\n","\n","    recommended_products = df.iloc[product_indices][[\"product\", \"category\", \"sub_category\", \"brand\"]]\n","\n","    print(f\"\\nRecommendations for: {product_name}\\n\")\n","    display(\n","        recommended_products.style.set_properties(**{'text-align': 'left'})\n","        .set_table_styles([{'selector': 'th', 'props': [('font-weight', 'bold'), ('text-align', 'left')]}])\n","    )\n","\n","    return recommended_products\n","\n","# ------------------- Example usage -------------------\n","product_to_search = \"Water Bottle - Orange\"\n","recommendations = get_recommendations_ANN(product_to_search, 10)\n"],"metadata":{"colab":{"base_uri":"https://localhost:8080/","height":415},"id":"L1J9jKsSvSFT","executionInfo":{"status":"ok","timestamp":1746339335311,"user_tz":-330,"elapsed":5605,"user":{"displayName":"000 111","userId":"14195104500313090051"}},"outputId":"b4334c2f-7084-475d-e8cd-fffd0c6bb3e1"},"execution_count":2,"outputs":[{"output_type":"stream","name":"stdout","t